<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto Original"
            android:id="@+id/textView"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTextoOriginal"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmailAutor"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tradução"
            android:id="@+id/textView3"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTraducao"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traduzir"
            android:id="@+id/btnTraduzir" android:onClick="btnTraduzirOnClick" android:background="#ff286090"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remover Tradução"
            android:layout_gravity="center_horizontal" android:id="@+id/btnLimparTraducao"
            android:onClick="btnLimparTraducaoOnClick" android:background="#ffc9302c"/>
</LinearLayout>